<Page
    x:Class="BrickBreaker.GameOver"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BrickBreaker"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="Assets/Dark-background.jpg"/>
        </Grid.Background>
        <TextBlock x:Name="GameOverText" HorizontalAlignment="Left" Margin="315,287,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="475" Height="132" SelectionChanged="TextBlock_SelectionChanged" FontWeight="Bold" Foreground="White" FontSize="36"><Run Text="Game Over! "/><LineBreak/></TextBlock>
        <MediaElement x:Name="myMusicPlayer" AutoPlay="True" />
        <Button x:Name="BackButton" Content="Back to Main Menu" HorizontalAlignment="Left" Margin="334,427,0,0" VerticalAlignment="Top" Height="49" Width="162" Foreground="White" Background="#FFF01650" FontSize="16" FontWeight="Bold" Click="BackButton_Click"/>
        <Border BorderBrush="Black" HorizontalAlignment="Left" Height="100" Margin="438,482,0,0" VerticalAlignment="Top" Width="100"/>
    </Grid>
</Page>
